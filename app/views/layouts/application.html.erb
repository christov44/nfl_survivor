<!DOCTYPE html>
<html>
<head>
  <title>NflSurvivor</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <nav>
    <a href="/home">Home</a> ||
    <% if user_signed_in? %>
      <%= "User logged in as <#{current_user.email}>" %> || <%= link_to "Edit Profile", edit_user_registration_path  %> || <%= link_to "Logout", destroy_user_session_path, :method => :delete  %> <br>
    <% else %>
      <%= link_to "User Login", new_user_session_path %> || <%= link_to "User Register", new_user_registration_path %>
    <% end %>
  </nav>

  <% flash.each do |name, msg| %>
    <div class=" <%= name %>">
      <%= msg %>
    </div>
  <% end %>

<%= yield %>

</body>
</html>

