<h1> Your Picks </h1>

<%= link_to "Pick Someone", new_pick_path %> <br>

<table>
  <tr>
    <th>Week</th>
    <th>Team</th>
  </tr>
  <br />
  <% @picks.each do |pick| %>
    <tr>
      <td> <%= pick.week.number %> </td>
      <td> <%= pick.team.name %> </td>
      <td> || <%= link_to "edit", edit_pick_path(pick) %> || </td>
      <td> <%= link_to "delete", pick_path(pick), method: :delete, data: {confirm: "Are you sure you want to delete?"} %></td>
    </tr>
  <% end %>
</table>